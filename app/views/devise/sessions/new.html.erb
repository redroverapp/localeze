<%- @title = 'Admin' -%>

<h2 class="pretty">Sign In</h2>

<%= devise_error_messages! -%>

<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'wide'} do |f| -%>
  <fieldset class="form_container">
    <div class="form_column">
      <%= f.text_field :email -%>
      <%= f.password_field :password -%>

      <%- if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, :label => false, :inline_label => 'Remember me' -%>
      <%- end -%>
    </div>
    <div class="link_block">
      <%= f.submit 'Sign In', :class => 'link_button' -%>
      <%= render :partial => 'devise/shared/links' -%>
    </div>
  </fieldset>
<%- end -%>
